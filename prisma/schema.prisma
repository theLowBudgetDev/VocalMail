// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"] // <-- Add "windows"
}

datasource db {
  provider = "sqlite"
  url      = "file:./vocalmail.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  avatar    String
  sentEmails Email[]   @relation("SentEmails")
  receivedEmails EmailRecipient[]
  contacts  Contact[] @relation("UserContacts")
  ownedContacts Contact[] @relation("ContactOwner")

  @@map("users")
}

model Contact {
  ownerId       Int
  contactUserId Int
  owner         User @relation("ContactOwner", fields: [ownerId], references: [id])
  contactUser   User @relation("UserContacts", fields: [contactUserId], references: [id])

  @@id([ownerId, contactUserId])
  @@map("contacts")
}

model Email {
  id           Int      @id @default(autoincrement())
  senderId     Int
  subject      String
  body         String
  sentAt       DateTime @default(now())
  senderStatus String   @default("sent") // "sent" or "deleted"

  sender    User             @relation("SentEmails", fields: [senderId], references: [id])
  recipients EmailRecipient[]

  @@map("emails")
}

model EmailRecipient {
  emailId     Int
  recipientId Int
  read        Boolean  @default(false)
  status      String   @default("inbox") // "inbox", "archive", or "deleted"

  email    Email @relation(fields: [emailId], references: [id])
  recipient User  @relation(fields: [recipientId], references: [id])

  @@id([emailId, recipientId])
  @@map("email_recipients")
}
